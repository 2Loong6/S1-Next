<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    style="?attr/myCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/card_view_horizontal_margin"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    tools:context="cl.monsoon.s1next.fragment.ReplyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_line_height_with_avatar"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/list_view_item_padding"
            android:paddingLeft="@dimen/list_view_item_padding"
            android:paddingRight="@dimen/list_view_item_padding"
            android:paddingStart="@dimen/list_view_item_padding">

            <include
                android:id="@id/avatar"
                layout="@layout/avatar"/>

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/avatar"
                android:layout_toRightOf="@id/avatar"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/username"
                android:layout_alignStart="@id/username"
                android:layout_below="@id/username"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/comment_or_reply"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/prompt_reply"
            android:inputType="textMultiLine"
            android:paddingBottom="@dimen/list_view_item_padding"
            android:paddingEnd="@dimen/list_view_item_padding"
            android:paddingLeft="@dimen/list_view_item_padding"
            android:paddingRight="@dimen/list_view_item_padding"
            android:paddingStart="@dimen/list_view_item_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:ignore="NewApi"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/secondaryBackground">

            <ImageButton
                android:id="@+id/send"
                android:layout_width="@dimen/minimum_touch_target_size"
                android:layout_height="@dimen/minimum_touch_target_size"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/send_content_desc"
                android:src="?attr/iconSend"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
