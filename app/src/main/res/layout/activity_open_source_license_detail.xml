<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="cl.monsoon.s1next.view.activity.OpenSourceLicenseDetailActivity">

    <data>

        <variable
            name="licenseAssetViewModel"
            type="cl.monsoon.s1next.viewmodel.LicenseAssetViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/app_bar_layout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:filePath="@{licenseAssetViewModel.filePath}"
            app:movementMethod="@{licenseAssetViewModel.scrollingMovementMethod}" />

    </LinearLayout>

</layout>
