<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="DarkCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>

    <style name="DarkCardView.Black" parent="CardView">
        <item name="cardBackgroundColor">@android:color/black</item>
    </style>

    <style name="EmoticonKeyboardTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="TextAppearance.Dense.Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/dense_text_size_subheader</item>
    </style>

    <style name="TextAppearance.Dense.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/dense_text_size_body_2</item>
    </style>

    <style name="TextAppearance.Dense.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/dense_text_size_small</item>
    </style>

</resources>
