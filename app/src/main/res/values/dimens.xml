    <dimen name="two_line_height">72dp</dimen>

    <dimen name="item_padding">16dp</dimen>

    <dimen name="list_view_padding">8dp</dimen>

    <!--Before L, CardView adds padding to its content and draws shadows to that area.
    This padding amount is equal to maxCardElevation + (1 - cos45) * cornerRadius on the
    sides and maxCardElevation * 1.5 + (1 - cos45) * cornerRadius on top and bottom.-->
    <!--<dimen name="card_view_margin">8dp</dimen>-->

    <!-- 8dp (cardView margin) - ((2 + (1 - cos45) * 2))dp ≈ 5.05dp -->
    <dimen name="card_view_horizontal_margin">5.05dp</dimen>
    <!-- 4dp (half of cardView margin) - (2 * 1.5 + (1 - cos45) * 2)dp ≈ 0.05dp -->
    <dimen name="card_view_vertical_margin">0.05dp</dimen>
    <!-- 8dp (cardView margin) - (2 * 1.5 + (1 - cos45) * 2)dp = 4.05dp -->
    <dimen name="recycler_view_card_padding">4.05dp</dimen>

    <dimen name="viewpager_tabs_elevation">1dp</dimen>

    <dimen name="avatar_size">40dp</dimen>

    <dimen name="dialog_padding">24dp</dimen>
    <dimen name="dialog_padding_bottom">16dp</dimen>
    <dimen name="dialog_divider_padding">8dp</dimen>

    <item name="line_spacing_multiplier" format="float" type="dimen">1.2</item>

    <!-- 36dp (emoticon keyboard header) + 160dp (48dp*3 three lines of emoticons + 8dp*2 top/bottom padding of emoticon grid) -->
    <dimen name="emoticon_keyboard_height">196dp</dimen>
    <dimen name="emoticon_keyboard_category_tabs_height">36dp</dimen>
    <dimen name="emoticon_padding">8dp</dimen>

    <dimen name="photo_view_crop_width">280dp</dimen>
    <dimen name="photo_view_crop_stroke_width">1dp</dimen>

</resources>
