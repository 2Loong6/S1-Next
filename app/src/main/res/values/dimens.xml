<resources>

    <!-- default screen margins, per the Android Design guidelines -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>

    <dimen name="minimum_touch_target_size">48dp</dimen>

    <dimen name="toolbar_elevation">4dp</dimen>

    <dimen name="drawer_avatar_margin_top">@dimen/item_padding</dimen>
    <dimen name="drawer_avatar_size">64dp</dimen>
    <dimen name="drawer_avatar_border_width">3dp</dimen>
    <!-- 16dp (avatar top margin) + 64dp (avatar height) + 48dp (username) + 8dp (username bottom margin)  -->
    <dimen name="drawer_top_height">136dp</dimen>

    <dimen name="fab_margin">16dp</dimen>

    <dimen name="swipe_refresh_progress_view_start">8dp</dimen>
    <dimen name="swipe_refresh_progress_view_end">72dp</dimen>

